<mvc:View
    controllerName="at.clouddna.lagerverwaltung.controller.Lagerorte" 
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" 
    xmlns:core="sap.ui.core" 
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified" 
    xmlns="sap.m"
    class="viewPadding">
    <Page id="page" title="Lieferungen">
        <content>
        <HBox>
        <Table id="produkte_table" headerText="Lieferungen" items="{path:'/Lagerort'}">
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle1" text="Lieferungen" />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <Button icon="sap-icon://download" press="toExcel" />
                        <Button text="neuen Eintrag erstellen" type="Accept" press="onCreatePressed" />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Produktname" />
                    </Column>
                    <Column>
                        <Text text="Lager Anzahl" />
                    </Column>
                    <Column>
                        <Text text="Lagerort" />
                    </Column>
                    <Column>
                        <Text text="Button" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="listEntries" type="Navigation" press="onListItemPressed">
                        <cells>     
                            <Text text="{produkt/name}" />
                            <Text text="{lagerAnz}" />
                            <Text text="{ort}" />
                            <HBox>
                            <Button id="deleteButton" icon="sap-icon://delete" type="Reject" press="onDeleteButtonPressed"/>
                            </HBox>
                            </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </HBox>
        </content>
    </Page>
</mvc:View>